{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "no-console": ["warn"],
        "eqeqeq": ["error"],
        "no-func-assign": ["off"],
        "require-jsdoc": ["warn"],
        "valid-jsdoc": ["error"],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "quote-props": [
            "error",
            "consistent-as-needed",
            {
                "keywords": true,
                "unnecessary": true,
                "numbers": true
            }
        ],
        "semi": [
            "warn",
            "always"
        ]
    }
}
